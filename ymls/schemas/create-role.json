{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Create Role Schema",
    "description": "Schema para validação dos dados de criação de uma role",
    "required": ["name", "description"],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "pattern": "^[a-zA-Z0-9_\\-\\s]+$",
            "description": "Nome único da role"
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500,
            "description": "Descrição detalhada da role"
        },
        "permissions": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "read",
                    "write",
                    "delete",
                    "admin",
                    "manage_users",
                    "manage_roles",
                    "view_reports"
                ]
            },
            "uniqueItems": true,
            "description": "Lista de permissões da role"
        },
        "isActive": {
            "type": "boolean",
            "description": "Se a role está ativa (padrão: true)"
        }
    },
    "additionalProperties": false
}
