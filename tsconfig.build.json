{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": false,
        "removeComments": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.e2e-spec.ts"
    ]
}
